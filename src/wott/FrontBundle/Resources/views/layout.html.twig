<!DOCTYPE html>
<html lang="fr" xmlns:fb="http://www.facebook.com/2008/fbml">
<head>
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bundles/wottfront/css/styles.css') }}" rel="stylesheet" media="screen">
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
</head>

<body>
    {% block header %}
    <header>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse" id="navbar-main">
                    {{ knp_menu_render('wottFrontBundle:Builder:mainMenu', { 'style': 'navbar' }) }}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            {% if app.user %}
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mon compte <b class="caret"></b></a>
                            <ul class="dropdown-menu" aria-labelledby="Mon compte">
                                <li><a href="{{ path('sonata_user_profile_show') }}">Voir mon profil</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('_security_logout') }}" class="btn btn-default btn-danger navbar-btn btn-xs" id="btn-logout">Logout</a></li>
                            </ul>
                            {% else %}
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Connexion / Inscription <b class="caret"></b></a>
                            <ul class="dropdown-menu" aria-labelledby="Connexion / Inscription">
                                <li><a href="{{ path('fos_user_security_login') }}" class="btn btn-default navbar-btn">Login without FB</a></li>
                                <li class="divider"></li>
                                <li>
                                    {{ facebook_login_button() }}
                                    {{ facebook_initialize({'xfbml': true, 'culture': 'fr_FR', 'fbAsyncInit': 'onFbInit();'}) }}
                                </li>
                            </ul>
                            <script type="text/javascript" > // Script for FOSFacebookBundle
                                function goLogIn(){
                                    window.location = "{{ path('_security_check') }}";
                                }
                                function onFbInit() {
                                    if (typeof(FB) != 'undefined' && FB != null ) {
                                        FB.Event.subscribe('auth.statusChange', function(response) {
                                            if (response.session || response.authResponse) setTimeout(goLogIn, 50);
                                            else window.location = "{{ path('_security_logout') }}";
                                        });
                                    }
                                }
                            </script>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    {% endblock %}

    <div class="jumbotron">
        <h1><img src="{{ asset('bundles/wottfront/images/logo.png') }}" alt="Logo WOTT">&nbsp;What's on TV tonight ?</h1>
    </div>

    <section id="main" class="container-fluid" role="content">
    {% block content %}{% endblock %}
    </section>

    <footer class="well">
      <div class="container">
        <p class="text-center">Copyright &copy; - 2014 - What's On TV Tonight</p>
        <p class="text-center"><a href="{{ path('mentions') }}">Mentions l√©gales</a></p>
      </div>
    </footer>

    {% block javascript %}
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="{{ asset('/js/bootstrap.js') }}"></script>
    {% endblock %}

</body>
</html>
