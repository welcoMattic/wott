namespace :wott do

  desc 'Force database update'
  task :database do
    puts 'database'
    roles(:app) do
      invoke 'symfony:run', :'doctrine:schema:update', '--force'
    end
  end

  desc 'Install assets'
  task :assets do
    puts 'assets'
    roles(:app) do
      invoke 'symfony:run', :'assets:install', 'web'
    end
  end

end